#include<iostream>
#include<stack>
using namespace std;

void pushatBottom(stack<int>& s,int val) {
    if (s.empty()) {
        s.push(val);
        return;
    }
    int temp = s.top();
    s.pop();
    pushatBottom(s,val);
    s.push(temp);
}

void reverse(stack<int>& s) {
    if (s.empty()) return;
    int temp = s.top();
    s.pop();
    reverse(s);
    pushatBottom(s, temp);
}
int main() {
    stack<int> s;
    s.push(1);
    s.push(2);
    s.push(3);
    cout << "Original Stack: ";
    while (!s.empty()) {
        cout << s.top() << " ";
        s.pop();
    }
    cout << endl;
    pushatBottom(s, 4);
}